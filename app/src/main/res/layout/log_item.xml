<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#ECF9FB"
    android:id="@+id/linears"
    android:orientation="horizontal"
    android:layout_marginTop="0dp"
    >

    <ImageView
        android:id="@+id/image_logs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:src="@drawable/b" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_logs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:paddingLeft="30dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center_vertical"
            android:text="name_logs"
            android:textColor="#06414A"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/type_logs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"
                android:src="@drawable/missed"/>
            <TextView
                android:id="@+id/date_logs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8077570708"
                android:fontFamily="@font/josefin_sans_semibold"

                android:textSize="14sp"
                android:textColor="#02AC9B"
                android:gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:id="@+id/time_logs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/josefin_sans_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="10s"
                android:textColor="#02AC9B"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/number_logs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8077570708"
                android:fontFamily="@font/josefin_sans_semibold"

                android:textSize="14sp"
                android:textColor="#02AC9B"
                android:gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.94"
            android:background="#024037"/>







    </LinearLayout>





        <ImageView
            android:id="@+id/call_logs"
            android:padding="17dp"
            android:src="@drawable/telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_weight="6" />














</LinearLayout>

