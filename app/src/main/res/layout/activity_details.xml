<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ECF9FB"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6dp"
        android:id="@+id/back_details"
        android:src="@drawable/back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descript"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lovers_quarrel"
        android:gravity="center"
        android:text="Your book of Identities"
        android:textColor="#0c1c43"
        android:textSize="29sp" />


    <ImageView
        android:layout_below="@+id/descript"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:id="@+id/image"
        android:padding="20dp"
        android:src="@drawable/a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image">

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textColor="#0C4A42"/>


        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="1234567890"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textColor="#0C4A42"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:id="@+id/details_mssg"
                android:src="@drawable/chat"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/details_call"
                android:padding="15dp"
                android:src="@drawable/telephone"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/details_edit"
                android:padding="15dp"
                android:src="@drawable/edit"/>

        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/history_backbtn"
            android:textColor="#FFFFFF"
            android:id="@+id/callhistory"
            android:text="Call History"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/josefin_sans_semibold"
            android:layout_marginTop="40dp"/>

    </LinearLayout>










</RelativeLayout>