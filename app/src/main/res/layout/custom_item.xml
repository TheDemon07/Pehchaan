<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#ECF9FB"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="match_parent"

        android:id="@+id/itemcircleimage"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:src="@drawable/circle"
        android:layout_weight="3.7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="Soumen Paul"
            android:textColor="#06414A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itemphone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8077570708"
            android:fontFamily="@font/josefin_sans_semibold"

            android:textSize="14sp"
            android:textColor="#02AC9B"
            android:gravity="center"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/itemdivider"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2.95"
            android:background="#134249"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_marginTop="00dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="14dp"
            android:src="@drawable/chat"

            android:layout_weight="1" />

        <ImageView
            android:id="@+id/itemcall"
            android:padding="14dp"
            android:src="@drawable/telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"

            android:gravity="center"
            android:layout_weight="1" />





    </LinearLayout>







</LinearLayout>